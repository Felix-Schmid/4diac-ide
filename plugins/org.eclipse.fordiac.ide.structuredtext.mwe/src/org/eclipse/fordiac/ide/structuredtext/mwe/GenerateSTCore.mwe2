				generateXtendStub = true
			}
			renameRefactoring = {
				useChangeSerializer = true
			}
			formatter = {
				generateStub = true
				generateXtendStub = true
			}
			junitSupport = {
				junitVersion = "5"
			}
			fragment = ui.codemining.CodeMiningFragment {
				generateStub = true
				generateXtendStub = true
			}
		}
